{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "strict": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/", "vite.config.ts"]
}
